@using WebApplication5.Models
@model WebApplication5.ViewModels.RandomMovieViewModel
@*@model WebApplication5.Models.Movie*@
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>@Model.Name</h2>*@

@*<h2>@( ((Movie)ViewData["Movie"]).Name)</h2>*@

@*<h2>@ViewBag.RandomMovie</h2>*@


@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}


<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>No one has rented this movie before </p>
    <text>No one has rented this movie before </text>

}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}


